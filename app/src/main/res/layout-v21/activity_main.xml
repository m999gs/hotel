<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.m999g.hotel.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Reception"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reception" />

                <ImageView
                    android:id="@+id/roomService"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_service" />

                <ImageView
                    android:id="@+id/Ask_me"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ask_me" />
                <ImageView
                    android:id="@+id/maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/maintenance" />
                <ImageView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/concierge"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/concierge" />

                <ImageView
                    android:id="@+id/Housekeeping"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/housekeeping" />

                <ImageView
                    android:id="@+id/Travel"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/travel" />

                <ImageView
                    android:id="@+id/Hotel_info"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_info" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
